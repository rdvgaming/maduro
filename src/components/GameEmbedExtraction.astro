---
// GameEmbedExtraction component - embeds the Maduro Extraction game
import maduroDesperationImg from "../lib/assets/maduro-desperation.png";
import maduroDesperationSmokingImg from "../lib/assets/maduro-desperation-smoking.png";
---

<div id="game-container">
  <canvas id="gameCanvas"></canvas>

  <div id="ui">
    <div>Time: <span id="timer">0:00</span></div>
    <div>Altitude: <span id="altitude">0</span></div>
    <div>Speed: <span id="speed" style="color: #00ff00">0</span></div>
    <div>Hits: <span id="hits">2/2</span></div>
  </div>

  <div id="game-won">
    <div class="modal-content">
      <img src={maduroDesperationImg.src} alt="Maduro Desperate" id="won-sprite" />
      <div class="modal-text">
        <h1>RESCUED!</h1>
        <p>Maduro has been extracted!</p>
        <p>Time: <span id="won-time">0:00</span></p>
        <p style="margin-top: 20px; font-size: 18px" class="restart-text">
          Press R or tap here to restart
        </p>
      </div>
    </div>
  </div>

  <div id="game-over">
    <div class="modal-content">
      <img src={maduroDesperationSmokingImg.src} alt="Maduro Desperate Smoking" id="lose-sprite" />
      <div class="modal-text">
        <h1>MISSION FAILED!</h1>
        <p>Time: <span id="final-time">0:00</span></p>
        <p style="margin-top: 20px; font-size: 18px" class="restart-text">
          Press R or tap here to restart
        </p>
      </div>
    </div>
  </div>

  <div id="touch-controls">
    <div id="thrust-button">
      <div class="thrust-arrow">â–²</div>
      <div class="thrust-label">THRUST</div>
    </div>
  </div>
</div>

<script>
  import { GameManager } from "../lib/maduro-extraction/game-manager";
  new GameManager();
</script>

<style>
  /* Hide Starlight header when game is present */
  :global(body:has(#game-container)) :global(header.header) {
    display: none;
  }

  /* Remove body margins when game is present */
  :global(body:has(#game-container)) {
    margin: 0;
    padding: 0;
    overflow: hidden;
  }

  #game-container {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    margin: 0;
    padding: 0;
    background: #000;
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 9999;
  }

  #gameCanvas {
    border: 3px solid #ff0000;
    box-shadow: 0 0 20px rgba(255, 0, 0, 0.5);
    display: block;
    max-width: 100%;
    max-height: 100vh;
  }

  #ui {
    position: absolute;
    top: 10px;
    left: 10px;
    color: #fff;
    font-size: 18px;
    text-shadow: 2px 2px 4px #000;
    pointer-events: none;
    z-index: 10;
  }

  #ui div {
    margin: 5px 0;
    background: rgba(0, 0, 0, 0.7);
    padding: 5px 10px;
    border-radius: 5px;
  }

  #game-won {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    background: rgba(0, 0, 0, 0.9);
    color: #00ff00;
    padding: 40px;
    border: 5px solid #00ff00;
    border-radius: 10px;
    display: none;
    z-index: 20;
  }

  .modal-content {
    display: flex;
    flex-direction: row;
    align-items: center;
    gap: 30px;
  }

  .modal-text {
    text-align: center;
  }

  #game-won h1 {
    font-size: 48px;
    margin-bottom: 20px;
    text-shadow: 3px 3px 6px #000;
  }

  #game-won p {
    font-size: 24px;
    color: #fff;
    margin: 10px 0;
  }

  #won-sprite {
    width: 200px;
    height: auto;
    flex-shrink: 0;
  }

  #game-over {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    background: rgba(0, 0, 0, 0.9);
    color: #ff0000;
    padding: 40px;
    border: 5px solid #ff0000;
    border-radius: 10px;
    display: none;
    z-index: 20;
  }

  #game-over h1 {
    font-size: 48px;
    margin-bottom: 20px;
    text-shadow: 3px 3px 6px #000;
  }

  #game-over p {
    font-size: 24px;
    color: #fff;
    margin: 10px 0;
  }

  #lose-sprite {
    width: 200px;
    height: auto;
    flex-shrink: 0;
  }

  #touch-controls {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    display: none;
    z-index: 15;
  }

  #thrust-button {
    width: 120px;
    height: 120px;
    background: rgba(0, 255, 0, 0.3);
    border: 4px solid rgba(0, 255, 0, 0.7);
    border-radius: 50%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    touch-action: none;
    user-select: none;
  }

  #thrust-button:active {
    background: rgba(0, 255, 0, 0.6);
    border-color: #00ff00;
  }

  .thrust-arrow {
    font-size: 48px;
    font-weight: bold;
    color: #00ff00;
    line-height: 1;
  }

  .thrust-label {
    font-size: 14px;
    font-weight: bold;
    color: #00ff00;
    margin-top: 5px;
  }

  @media (max-width: 768px) {
    #ui {
      font-size: 14px;
    }

    #ui div {
      padding: 3px 6px;
    }

    #touch-controls {
      display: block;
    }

    #game-won {
      padding: 20px;
      max-width: 90vw;
    }

    #game-won h1 {
      font-size: 32px;
    }

    #game-won p {
      font-size: 18px;
    }

    #game-over {
      padding: 20px;
      max-width: 90vw;
    }

    #game-over h1 {
      font-size: 32px;
    }

    #game-over p {
      font-size: 18px;
    }
  }

  @media (orientation: landscape) and (max-height: 600px) {
    #thrust-button {
      width: 100px;
      height: 100px;
    }

    .thrust-arrow {
      font-size: 36px;
    }

    .thrust-label {
      font-size: 12px;
    }
  }
</style>
