---
// GameEmbed component - embeds the Maduro Wings game
---

<div id="game-container">
  <canvas id="gameCanvas"></canvas>

  <div id="ui">
    <div>Time: <span id="timer">0:00</span></div>
    <div>Score: <span id="score">0</span></div>
    <div>Weapons: <span id="weapon-type">BASIC(1)</span><span id="weapon-level"></span></div>
    <div class="stat-bar">
      <div class="stat-fill health-fill" id="health-bar" style="width: 100%"></div>
    </div>
  </div>

  <div id="game-over">
    <h1>SHOT DOWN!</h1>
    <p>Time survived: <span id="final-time">0:00</span></p>
    <p>Final score: <span id="final-score">0</span></p>
    <p style="margin-top: 20px; font-size: 18px" class="restart-text">
      Press R or tap here to restart
    </p>
  </div>

  <div id="touch-controls">
    <div id="joystick-base">
      <div id="joystick-stick"></div>
    </div>
  </div>
</div>

<script>
  import { GameManager } from "../lib/maduro-wings/game-manager";
  new GameManager();
</script>

<style>
  /* Hide Starlight header when game is present */
  :global(body:has(#game-container)) :global(header.header) {
    display: none;
  }

  /* Remove body margins when game is present */
  :global(body:has(#game-container)) {
    margin: 0;
    padding: 0;
    overflow: hidden;
  }

  #game-container {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    margin: 0;
    padding: 0;
    background: #000;
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 9999;
  }

  #gameCanvas {
    border: 3px solid #ff0000;
    box-shadow: 0 0 20px rgba(255, 0, 0, 0.5);
    display: block;
    max-width: 100%;
    max-height: 100vh;
  }

  #ui {
    position: absolute;
    top: 10px;
    left: 10px;
    color: #fff;
    font-size: 18px;
    text-shadow: 2px 2px 4px #000;
    pointer-events: none;
    z-index: 10;
  }

  #ui div {
    margin: 5px 0;
    background: rgba(0, 0, 0, 0.7);
    padding: 5px 10px;
    border-radius: 5px;
  }

  .stat-bar {
    width: 200px;
    height: 20px;
    background: rgba(0, 0, 0, 0.7);
    border: 2px solid #ffd700;
    border-radius: 10px;
    overflow: hidden;
    position: relative;
  }

  .stat-fill {
    height: 100% !important;
    transition: width 0.3s ease !important;
    margin: 0 !important;
    padding: 0 !important;
  }

  .health-fill {
    background: linear-gradient(90deg, #ff0000, #ff6666) !important;
  }

  #game-over {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    background: rgba(0, 0, 0, 0.9);
    color: #ff0000;
    padding: 40px;
    border: 5px solid #ff0000;
    border-radius: 10px;
    text-align: center;
    display: none;
    z-index: 20;
  }

  #game-over h1 {
    font-size: 48px;
    margin-bottom: 20px;
    text-shadow: 3px 3px 6px #000;
  }

  #game-over p {
    font-size: 24px;
    color: #fff;
    margin: 10px 0;
  }

  #touch-controls {
    position: absolute;
    bottom: 20px;
    left: 20px;
    width: 150px;
    height: 150px;
    display: none;
    z-index: 15;
  }

  #joystick-base {
    position: absolute;
    width: 150px;
    height: 150px;
    background: rgba(255, 255, 255, 0.2);
    border: 3px solid rgba(255, 255, 255, 0.5);
    border-radius: 50%;
    touch-action: none;
  }

  #joystick-stick {
    position: absolute;
    width: 60px;
    height: 60px;
    background: rgba(255, 0, 0, 0.6);
    border: 3px solid rgba(255, 255, 255, 0.8);
    border-radius: 50%;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    touch-action: none;
    pointer-events: none;
  }

  @media (max-width: 768px) {
    #ui {
      font-size: 14px;
    }

    #ui div {
      padding: 3px 6px;
    }

    .stat-bar {
      width: 120px;
      height: 16px;
    }

    #touch-controls {
      display: block;
    }

    #game-over {
      padding: 20px;
      max-width: 90vw;
    }

    #game-over h1 {
      font-size: 32px;
    }

    #game-over p {
      font-size: 18px;
    }
  }

  @media (orientation: landscape) and (max-height: 600px) {
    #touch-controls {
      width: 120px;
      height: 120px;
      bottom: 10px;
      left: 10px;
    }

    #joystick-base {
      width: 120px;
      height: 120px;
    }

    #joystick-stick {
      width: 50px;
      height: 50px;
    }
  }
</style>
